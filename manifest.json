{
    "manifest_version": 2,
    "name": "Highreader",
    "version": "0.2",
    "description": "Highlighting Speed Reading helper for Wikipedia.",
    "icons": {
        "16" : "icon.png",
        "48" : "icon.png",
        "128" : "icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts" : [ "background.js" ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.wikipedia.org/*",
                "http://*/*"
            ],
            "js": [
                "jquery.min.js",
                "firebase.js",
                "main.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "http://*.wikipedia.org/*"
    ]
}
